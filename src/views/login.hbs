<div class="container my-5">
  <div class="jumbotron">
    <h1>LOGIN</h1>
    <br />
    <form
      class="form"
      role="form"
      action="/auth/login"
      method="post"
      autocomplete="off"
    >
      <div class="form-group my-2">
        <input
          name="username"
          placeholder="Email"
          class="form-control"
          type="email"
          required
        />
      </div>
      <div class="form-group my-2">
        <input
          name="password"
          placeholder="Password"
          class="form-control"
          type="password"
          required
        />
      </div>

      <div class="form-group text-center">
        <input class="btn btn-success my-3 d-block" style="width: 100%;" type="submit" value="Login"/>
        <button class="btn btn-info my-3 d-block" style="width: 100%;" onclick="goSignup()">
          SIGNUP
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  function redireccionar(pagina) {
    location.href = pagina;
  }

  function goSignup() {
    redireccionar("/auth/signup");
  }
</script>
