<div class="container my-2">
  <div class="jumbotron">
    <h1>SIGNUP</h1>
    <br />
    <form
      class="form"
      role="form"
      action="/auth/signup"
      method="post"
      autocomplete="off"
      enctype="multipart/form-data"
    >
      <div class="form-group my-2">
        <input
          name="username"
          placeholder="Email"
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group my-2">
        <input
          name="password"
          placeholder="Password"
          class="form-control"
          type="password"
          required
        />
      </div>
      <div class="form-group my-2">
        <input
          name="firstname"
          placeholder="firstname"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group my-2">
        <input
          name="lastname"
          placeholder="lastname"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group my-2">
        <input
          name="address"
          placeholder="Direccion"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group my-2">
        <input
          name="years"
          placeholder="Edad"
          class="form-control"
          type="number"
          required
        />
      </div>

      <div class="form-group my-2">
        <input
          name="phone"
          placeholder="Telefono"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group my-2">
        <label for="avatar">Foto</label>
        <input
          id="avatar"
          name="avatar"
          class="form-control"
          type="file"
          required
        />
      </div>

      <div class="form-group">
        <input class="btn btn-success my-3" style="width: 100%;" type="submit" value="Singup" />
        <a class="btn btn-info my-3" style="width: 100%;" href="/auth/login">Volver</a>
      </div>
    </form>
  </div>
</div>
